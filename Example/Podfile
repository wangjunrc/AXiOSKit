    # '其他模块 WithLogger','WithGPS','WithLoad','WithDatabase', 'WithMLeaksFinder','WithWeex'
    #  这样好像不行
    #    pod 'DoraemonKit', :subspecs => ['Core','WithLogger'], :configurations => DebugList
    
